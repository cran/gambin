citHeader("To cite gambin in a publication:")

citEntry(entry="Article",
	title = "Maximum likelihood methods for fitting the Gambin model reveals a superior fit to empirical species-abundance distributions",
        author = personList(as.person("T.J. Matthews"), as.person("M.K. Borregaard"), as.person("K.I. Ugland"), as.person("P.A.V. Borges"), as.person("F. Rigal"), as.person("R.J. Whittaker")),
	journal = "MS",
    volume="MS",
    pages="MS",
    year="MS",
	textVersion = "Matthews, T.J., Borregaard, M.K., Ugland, K., Borges, P.A.V., Rigal, F. & Whittaker, R.J. (submitted MS). Maximum likelihood methods for fitting the Gambin model reveals a superior fit to empirical species-abundance distributions." )
